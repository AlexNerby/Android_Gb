<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/day_weekly"
        android:layout_width="94dp"
        android:layout_height="62dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/low_middle_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rain_day"
        android:layout_width="83dp"
        android:layout_height="54dp"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toEndOf="@+id/day_weekly"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rain" />

    <TextView
        android:id="@+id/day_temperature"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:text="@string/day_temperature"
        android:textColor="@color/white"
        android:textSize="@dimen/low_middle_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rain_day"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/night_temperature"
        android:layout_width="86dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:text="@string/night_temperature"
        android:textColor="@color/black"
        android:textSize="@dimen/low_middle_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/day_temperature"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>